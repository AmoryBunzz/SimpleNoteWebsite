{
    "name": "back-end",
    "version": "1.0.0",
    "description": "",
    "main": "server.js",
    "scripts": {
        "server": "nodemon server.js",
        "website": "npm start --prefix website",
        "start": "concurrently --kill-others-on-fail \" npm run server\" \"npm run website\"",
        "install-server": "npm install",
        "install-website": "npm install --prefix website",
        "install": "concurrently \" npm run install-server\" \"npm run install-website\"",
        "format-code": "prettier --single-quote --semi false --trailing-comma all --tab-width 4 --write \"**/*.{js,json,css,scss}\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PBL5-CNPM-VeXeDienTu/Back-end.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/PBL5-CNPM-VeXeDienTu/Back-end/issues"
    },
    "homepage": "https://github.com/PBL5-CNPM-VeXeDienTu/Back-end#readme",
    "husky": {
        "hooks": {
            "pre-commit": "npm run format-code"
        }
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.2",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "jsonwebtoken": "^8.5.1",
        "multer": "^1.4.4",
        "mysql": "^2.18.1",
        "mysql2": "^2.3.3",
        "nodemailer": "^6.7.3",
        "nodemon": "^2.0.15",
        "sequelize": "^6.17.0",
        "sequelize-cli": "^6.4.1",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "husky": "^7.0.4",
        "lint-staged": "^12.3.7",
        "prettier": "^2.6.1"
    }
}
